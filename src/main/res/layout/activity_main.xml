<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a00953080.comp3717.bcit.ca.newwesttriviaapp.activities.MainActivity"
    android:background="@android:color/black">

    <Button
        android:text="Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_button"
        android:width="@dimen/activity_horizontal_margin"
        style="@style/Widget.AppCompat.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:elevation="0dp"
        android:onClick="toQuestion"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/help_button"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:textSize="18sp"
        android:height="200px" />

    <Button
        android:text="Help"
        android:layout_height="wrap_content"
        android:id="@+id/help_button"
        android:layout_marginBottom="63dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:elevation="0dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:height="200px" />

    <TextView
        android:text="New Westminster Quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        tools:text="New Westminster Quiz"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:fontFamily="serif"
        android:layout_above="@+id/question_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp" />
</RelativeLayout>
