<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a00953080.comp3717.bcit.ca.newwesttriviaapp.activities.ResultActivity"
    android:background="@android:color/background_dark">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:id="@+id/feedBack"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:text="Next Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextQuestionBtn"
        android:onClick="goToNextQuestion"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Wager:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/wager"
        android:layout_alignBottom="@+id/wager"
        android:layout_toStartOf="@+id/error"
        android:layout_marginEnd="15dp"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentScore"
        android:textSize="36sp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/feedBack"
        android:layout_centerHorizontal="true"
        tools:textColor="@color/cardview_light_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/error"
        android:textSize="14sp"
        android:layout_below="@+id/currentScore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textColor="@color/cardview_light_background" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/wager"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:width="200px"
        android:layout_marginStart="13dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/error"
        android:layout_toEndOf="@+id/error"
        tools:textColor="@color/cardview_light_background" />

    <Button
        android:text="Quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginBottom="22dp"
        android:onClick="quit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
